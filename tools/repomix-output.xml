            except ValueError:
                timestamp_iso = timestamp_str
        else:
            phase = remaining
            timestamp_iso = ""

        checkpoints.append({
            "tag_name": tag_name,
            "prp_id": checkpoint_prp_id,
            "phase": phase,
            "timestamp": timestamp_iso,
            "commit_sha": commit_sha,
            "message": tag_message
        })

    return checkpoints


