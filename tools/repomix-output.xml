    if not search_dir.exists():
        raise RuntimeError(
            f"Search directory not found: {search_dir}\n"
            f"ðŸ”§ Troubleshooting: Verify search_dir path is correct"
        )

    # Scan all Python files
    for py_file in search_dir.glob("*.py"):
        try:
