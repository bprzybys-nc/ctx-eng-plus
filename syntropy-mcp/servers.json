{
  "servers": {
    "syn-serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ],
      "env": {
        "SERENA_PROJECT_ROOT": "/Users/bprzybysz/nc-src/ctx-eng-plus"
      },
      "lazy": false
    },
    "syn-filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "env": {},
      "lazy": false
    },
    "syn-git": {
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ],
      "env": {},
      "lazy": false
    },
    "syn-context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "10000"
      },
      "lazy": true
    },
    "syn-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {},
      "lazy": false
    },
    "syn-repomix": {
      "command": "npx",
      "args": [
        "-y",
        "repomix",
        "--mcp"
      ],
      "env": {},
      "lazy": true
    },
    "syn-github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {},
      "lazy": true
    },
    "syn-perplexity": {
      "command": "npx",
      "args": [
        "-y",
        "server-perplexity-ask"
      ],
      "env": {},
      "lazy": true
    },
    "syn-linear": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"],
      "env": {},
      "lazy": false
    }
  }
}
